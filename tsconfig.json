{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "target": "ESNext",
        "lib": ["ESNext", "DOM"],
        "module": "ESNext",
        "types": ["node", "vite/client", "@webgpu/types"],
        "jsx": "react",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "sourceMap": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.d.ts",
    ]
}