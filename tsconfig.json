{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "target": "es6",
        "lib": ["es2017", "dom"],
        "module": "es2015",
        "types": ["node", "@webgpu/types"],
        "jsx": "react",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "strict": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.d.ts",
    ]
}

